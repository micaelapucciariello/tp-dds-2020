<html>
    {{# partial "titulo" }}
        <title>Crear Entidad base</title>
    {{/partial}}

    {{# partial "contenido" }}
        <main>
            <section class="categoriasForm">
                <form action="/entidadBase" method="POST">
                    <div>
                        <h2 class="centrado">Crear nueva entidad base</h2>
                        <h3>Por favor ingrese los siguientes datos:</h3>
                        </br>
                    </div>
                    Nombre:<input type="text" class="fadeIn second" name="Nombre" placeholder="Nombre">
                    </br>
                    </br>
                    Descripción:<input type="text" class="fadeIn second" name="Descripcion" placeholder="Descripcion">
                    </br>
                    </br>
                    <label for="categoria">Seleccione Categoría:</label>
                    <select name="categoria" id="categoria">
                        {{#categorias}}
                            <option value={{id}}>{{nombre}}</option>
                        {{/categorias}}
                    </select>
                    </br>
                    </br>
                    <label for="EntJur">Seleccione Entidad Juridica:</label>
                    <select name="EntJur" id="EntJur">
                        {{#entidadesJuridicas}}
                            <option value={{id}}>{{razonSocial}}</option>
                        {{/entidadesJuridicas}}
                    </select>
                    </br>
                    </br>
                    <input type="submit" class="crear" value="Crear">
                    <a href="/categorias" class="goBack">Volver atrás</a>
                </form>
            </section>
        </main>
    {{/partial}}
    {{> layout.html.hbs }}
</html>